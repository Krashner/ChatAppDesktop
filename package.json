{
  "name": "chatapp",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Electron Chat App",
  "author": "Justin <justin@jbuttrey.com>",
  "main": "index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "npm install && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.chat.app",
    "linux": {
      "category": "Graphics",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "armv7l"
          ]
        }
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  }
}